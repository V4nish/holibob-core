# Application
APP_NAME=Holibob
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false
APP_URL=http://your-server-ip-or-domain.com

APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_LEVEL=warning

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=holibob
DB_USERNAME=holibob
DB_PASSWORD=  # CHANGE THIS - Use a strong password!

# Session & Cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=  # CHANGE THIS - Use a strong password!
REDIS_PORT=6379

# Mail (configure for production notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@holibob.co.uk"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Scout & Meilisearch
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=  # CHANGE THIS - Use a strong key! (32+ characters)

# Affiliate Providers
# Sykes Cottages (via Awin)
SYKES_ENABLED=false
SYKES_AFFILIATE_ID=
SYKES_FEED_URL=
SYKES_FEED_FORMAT=csv
SYKES_BASE_URL=https://www.sykescottages.co.uk
SYKES_COMMISSION_RATE=6.0

# Hoseasons
HOSEASONS_ENABLED=false
HOSEASONS_API_KEY=
HOSEASONS_AFFILIATE_ID=
HOSEASONS_API_URL=https://api.hoseasons.co.uk
HOSEASONS_COMMISSION_RATE=5.0

# Optional Services
GOOGLE_MAPS_API_KEY=
GOOGLE_PLACES_API_KEY=

# Monitoring (optional - for error tracking)
SENTRY_LARAVEL_DSN=

# Broadcasting (optional - for real-time features)
BROADCAST_CONNECTION=log

# AWS (optional - for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
